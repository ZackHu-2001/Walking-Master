# http://editorconfig.org

# top-most EditorConfig file
root = true

[*]
end_of_line = lf
insert_final_newline = true

indent_style = space
indent_size = 4

charset = utf-8
trim_trailing_whitespace = true

[*.{css,ts,tsx,js,jsx,json,mjs}]
indent_size = 2
tab_width = 2

[*.{h,hpp,c,cpp,cxx,cc}]
indent_size = 4
tab_width = 4